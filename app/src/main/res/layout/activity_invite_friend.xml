<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000B08"
    android:orientation="vertical"
    tools:context="com.xxx.mining.ui.my.activity.InviteFriendActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="66dp">

            <include layout="@layout/include_title_bar" />

            <ImageButton
                android:id="@+id/invite_friend_save"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:background="@color/colorTransparent"
                android:src="@mipmap/save" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/invite_friend_image"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="24dp"
            android:background="@color/colorText"
            android:padding="8dp"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/invite_friend_my"
            android:textColor="@color/colorText"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/invite_friend_code"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size"
            android:gravity="center"
            android:text="---"
            android:textColor="@color/colorText"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/invite_friend_copy"
            android:layout_width="330dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape_back_btn_out_login"
            android:gravity="center"
            android:text="@string/invite_friend_copy"
            android:textColor="@color/colorText"
            android:textSize="18dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="239dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@mipmap/invite_friend_back" />

</RelativeLayout>