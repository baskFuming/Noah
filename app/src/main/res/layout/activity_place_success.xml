<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.shop.activity.PlaceSuccessActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:background="@mipmap/my_order_back">

        <ImageButton
            android:id="@+id/main_return"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorTransparent"
            android:src="@mipmap/main_return" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:src="@mipmap/my_order_success" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="   订单支付成功！"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/place_success_code"
                android:textColor="#9FB0BD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/place_success_price"
                android:textColor="#9FB0BD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/place_success_amount"
                android:textColor="#9FB0BD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/place_success_time"
                android:textColor="#9FB0BD" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/place_success_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-------"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/place_success_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="-------"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/place_success_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="-------"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/place_success_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="-------"
                android:textColor="#333333" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
