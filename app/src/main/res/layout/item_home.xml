<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_home_back"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/item_home_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@id/item_home_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_home_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/item_home_simple"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="117dp"
        android:layout_toRightOf="@id/item_home_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_home_usa"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/item_home_cny"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="12dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_home_range"
        android:layout_width="68dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="12dp" />

</RelativeLayout>