<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xxx.mining.ui.main.MainActivity">

    <LinearLayout
        android:id="@+id/main_1"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:paddingTop="10dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorMainBack"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/main_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/main_home_image"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/main_home_default" />

            <TextView
                android:id="@+id/main_home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/main_home"
                android:textColor="#F7FFFF"
                android:textSize="@dimen/main_bottom_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_wallet"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/main_wallet_image"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/main_wallet_default" />

            <TextView
                android:id="@+id/main_wallet_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/main_wallet"
                android:textColor="@color/colorMainBottomDefault"
                android:textSize="@dimen/main_bottom_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_shop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/main_shop_image"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/main_shop_default" />

            <TextView
                android:id="@+id/main_shop_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/main_shop"
                android:textColor="@color/colorMainBottomDefault"
                android:textSize="@dimen/main_bottom_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_mining"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/main_mining_image"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/main_mining_default" />

            <TextView
                android:id="@+id/main_mining_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/main_mining"
                android:textColor="@color/colorMainBottomDefault"
                android:textSize="@dimen/main_bottom_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_my"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/main_my_image"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/main_my_default" />

            <TextView
                android:id="@+id/main_my_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/main_my"
                android:textColor="@color/colorMainBottomDefault"
                android:textSize="@dimen/main_bottom_size" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_1" />

</RelativeLayout>