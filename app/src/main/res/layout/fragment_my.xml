<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000B08"
    android:orientation="vertical"
    tools:context="com.xxx.mining.ui.my.MyFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@mipmap/my_back">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="@string/main_my_title"
                android:textColor="@color/colorText"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="81dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_my_icon"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@mipmap/my_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/main_my_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_my_name"
                            android:textColor="@color/colorText"
                            android:textSize="18dp" />

                        <ImageView
                            android:id="@+id/main_my_level_1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="12dp"
                            android:src="@mipmap/level_false" />

                        <ImageView
                            android:id="@+id/main_my_level_2"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="6dp"
                            android:src="@mipmap/level_false" />

                        <ImageView
                            android:id="@+id/main_my_level_3"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="6dp"
                            android:src="@mipmap/level_false" />

                        <ImageView
                            android:id="@+id/main_my_level_4"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="6dp"
                            android:src="@mipmap/level_false" />

                        <ImageView
                            android:id="@+id/main_my_level_5"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="6dp"
                            android:src="@mipmap/level_false" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/main_my_invited_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="6dp"
                        android:drawableRight="@mipmap/copy"
                        android:text="@string/main_my_invited_text"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_my_invited"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:scaleType="fitXY"
                android:src="@mipmap/invite_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/main_my_invited_icon_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_my_invited_icon_text"
                    android:textColor="@color/colorText"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="@string/main_my_invited_icon_toast"
                    android:textColor="@color/colorText"
                    android:textSize="13dp" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_my_record"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/my_record" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/item_flag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imageView1"
            android:text="@string/main_my_record"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_my_notice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/my_notice" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/item_flag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imageView2"
            android:text="@string/main_my_notice"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/main_my_feedback"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/my_feedback" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/item_flag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imageView3"
            android:text="@string/main_my_feedback"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_my_call_my"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/my_feedback" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/item_flag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imageView4"
            android:text="@string/main_call_my"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_my_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/my_setting" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/item_flag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imageView4"
            android:text="@string/main_my_setting"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

</LinearLayout>