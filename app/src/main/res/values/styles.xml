<resources>

    <!-- Base application theme. -->
    <style name="TestTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 正式 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- 闪屏 -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/splash_small</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--PopupWindow进出场动画-->
    <style name="showPopupAnimation" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/anim_popup_out</item>
        <item name="android:windowEnterAnimation">@anim/anim_popup_in</item>
    </style>

</resources>
